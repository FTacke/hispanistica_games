# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------

# CRITICAL: Change this to a strong random secret key!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=__CHANGE_ME_TO_RANDOM_SECRET_KEY__

# Environment: development, production, testing
FLASK_ENV=production

# Debug mode (ONLY use in development!)
FLASK_DEBUG=false

# Session cookie security
FLASK_SESSION_SECURE=true
FLASK_SESSION_SAMESITE=lax

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------

# Path to JWT keys (RS256 public/private key pair)
# Generate keys with:
#   ssh-keygen -t rsa -b 4096 -m PEM -f config/keys/jwt_private.pem
#   openssl rsa -in config/keys/jwt_private.pem -pubout -outform PEM -out config/keys/jwt_public.pem
JWT_PUBLIC_KEY_PATH=config/keys/jwt_public.pem
JWT_PRIVATE_KEY_PATH=config/keys/jwt_private.pem

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database file paths (relative to project root) - SQLite corpus data
DB_PATH=data/db/corapan.db
DB_PUBLIC_PATH=data/db_public/corapan_public.db

# -----------------------------------------------------------------------------
# Auth Database (PostgreSQL)
# -----------------------------------------------------------------------------
# For production with PostgreSQL running on the host (not in Docker):
#   - The container connects via the Docker network gateway IP
#   - 172.18.0.1 is the host IP when container is in corapan-network
#
# Format: postgresql+psycopg2://user:password@host:port/database
AUTH_DATABASE_URL=postgresql+psycopg2://corapan_app:__POSTGRES_PASSWORD__@172.18.0.1:5432/corapan_auth

# Hashing algorithm for passwords (argon2 recommended)
AUTH_HASH_ALGO=argon2

# -----------------------------------------------------------------------------
# Media Configuration
# -----------------------------------------------------------------------------

# Allow public access to temporary audio files (for testing)
ALLOW_PUBLIC_TEMP_AUDIO=false

# -----------------------------------------------------------------------------
# User Credentials (CHANGE THESE!)
# -----------------------------------------------------------------------------
# NOTE: The use of passwords.env for application credentials is legacy and
# deprecated. This repository no longer auto-loads passwords.env and DB-based
# auth is the supported default. Keep a copy only for manual rollback scenarios.

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=__CHANGE_ME_TO_STRONG_PASSWORD__

# Researcher credentials (read-only access)
RESEARCHER_USERNAME=researcher
RESEARCHER_PASSWORD=__CHANGE_ME_TO_STRONG_PASSWORD__

# -----------------------------------------------------------------------------
# Optional: External Services
# -----------------------------------------------------------------------------

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# Redis (for caching and rate limiting in production)
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Host and port (for development server)
HOST=0.0.0.0
PORT=5000

# Gunicorn workers (for production)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

